{
  "manifest_version": 3,
  "name": "BluTV Dual Subtitles",
  "version": "1.0.0",
  "description": "BluTV için çift dilli altyazı desteği. İki farklı dilde altyazıyı aynı anda görüntüleyin.",
  "author": "yemirvural@email.com",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "BluTV Dual Subtitles"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.blutv.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["icons/*"],
    "matches": ["*://*.blutv.com/*"]
  }],
  "homepage_url": "https://github.com/yemirvural/blutv-dual-subtitles"
} 